ME =		src/metropolis/metamodel/frontend/parser

# Root of the Metropolis directory
ROOT =		../../../../..

# Get configuration info
CONFIG =	$(ROOT)/mk/metro.mk
include $(CONFIG)

DIRS = ptbyacc test

# Source Java files.  NOTE: these files are created by running ptbyacc.
JSRCS = \
	MetaModelParser.java \
        MetaModelParserval.java 	


# Extra rules that should be generated
EXTRA_TARGETS =  MetaModelParser.java

# 'make fast' works much better when yylhs.bin is built after ptbyacc
EXTRA_TARGETS2=  yylhs.bin 

JCLASS = $(JSRCS:%.java=%.class)

LEXER =	$(METRO)/src/metropolis/metamodel/frontend/lexer

# Sources that may or may not be present, but if they are present, we don't
# want make checkjunk to barf on them.
MISC_FILES = $(DIRS) \
	Empty.mm \
	Grammar.y \
	package.html

# .tbl files are generated by the parser, see MetaModelParser.java
TBL_FILES = \
	yycheck.tbl \
	yydefred.tbl \
	yydgoto.tbl \
	yygindex.tbl \
	yylen.tbl \
	yylhs.tbl \
	yyrindex.tbl \
	yyrule.tbl \
	yysindex.tbl \
	yytable.tbl

# .bin files are generated by MetaModelParser from .tbl files
BIN_FILES = $(TBL_FILES:%.tbl=%.bin)

# make checkjunk will not report OPTIONAL_FILES as trash
# make distclean removes OPTIONAL_FILES
OPTIONAL_FILES = \
	doc \
	$(TBL_FILES) \
	$(BIN_FILES)

# MetaModelParser.java imports Lexer.java, so we create it first.
all: $(LEXER)/Lexer.java suball $(EXTRA_SRCS) $(EXTRA_TARGETS)

install: subinstall

# Use $(MAKE) so that we can run with gmake
# Note that if we run JavaScope on MetaModelParser.java, we
# get a method body more than 64k in size, which fails to compile.
MetaModelParser.java MetaModelParserval.java: ptbyacc/ptbyacc Grammar.y
	(cd ptbyacc; $(MAKE) update_parser)

$(LEXER)/Lexer.java:
	@echo "MetaModelPaser.java imports Lexer.java"
	@echo "Lexer.java is created by JLex"
	(cd $(LEXER); $(MAKE) Lexer.java)


update_tables: yylhs.bin

yylhs.bin: MetaModelParser.class ../SyntaxChecker.class yylhs.tbl
	@echo "# Creating yylhs.bin and other .bin files"
	"$(JAVA)" -classpath "$(CLASSPATH)" \
	        metropolis.metamodel.frontend.SyntaxChecker  \
		Empty.mm

yylhs.tbl:
	@echo "# Creating yylhs.tbl and other .tbl files"
	(cd ptbyacc; $(MAKE) update_parser)

ptbyacc/ptbyacc:
	(cd ptbyacc; $(MAKE) ptbyacc)

# "make clean" removes $(KRUFT)
KRUFT = *.bin *.tbl $(JSRCS)

# Get the rest of the rules
include $(ROOT)/mk/metrocommon.mk


